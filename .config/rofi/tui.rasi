window {
    border:             2px;
    border-color:       @accent;
    width:              45%;
    /* Strict TUI Geometry */
    anchor:             center;
    location:           center;
    spacing:            0;
    children:           [ inputbar, listview ];
}

inputbar {
    background-color:   @bg;
    padding:            3px;
    spacing:            3px;
    children:           [ prompt, entry ];

    /* --- THE SEPARATOR LINE --- */
    border:             0px 0px 2px 0px; /* Bottom border only */
    border-color:       @accent;         /* Or use @sep for a subtle line */
    margin:             0px 0px 0px 0px;
}

prompt {
    /* "Tab" effect: Background matches main window */
    background-color:   @bg;
    text-color:         @accent;
    padding:            10px 24px;
    font:               "BlexMono Nerd Font Bold 12";
    vertical-align:     0.5;
}

entry {
    background-color:   @bg;
    placeholder:        "Search...";
    placeholder-color:  #565f89;
    text-color:         @fg;
    padding:            10px 12px;
    vertical-align:     0.5;
}

listview {
    lines:      8;
    columns:    1;
    scrollbar:  false;

    /* Padding pushes the first app down away from the separator line */
    padding:    12px;
}

element {
    padding:    10px 12px;
    spacing:    12px;
    orientation: horizontal;
    children:   [ element-icon, element-text ];
}

element normal.normal {
    text-color: @fg;
    background-color: @bg;
}

element selected.normal {
    background-color:   @accent;
    text-color:         @bg;
}

element-icon {
    size: 1.0em;
    vertical-align: 0.5;
    background-color: transparent;
    text-color: inherit;
}

element-text {
    vertical-align: 0.5;
    text-color: inherit;
    background-color: transparent;
}
