/*******************************************************************************
 * ROFI THEME - With Icons, Spaced Prompt & Separator Line
 * Theme: Tokyo Night / Catppuccin Options
 * Font: IBM Plex Mono (BlexMono Nerd Font)
 *******************************************************************************/

configuration {
    font:            "BlexMono Nerd Font Medium 12";
    show-icons:      true;
    icon-theme:      "Papirus-Dark";

    display-drun:    "";
    display-run:     "";
    display-window:  "";
    drun-display-format: "{name}";
    /* --- NAVIGATION --- */
    /* Map Alt+j and Alt+k to Up/Down */
    kb-row-up:      "Up,Alt+k";
    kb-row-down:    "Down,Alt+j";
}

/* --- TOKYO NIGHT --- */
* {
    bg:     #1a1b26;
    fg:     #c0caf5;
    //accent: #7aa2f7;
    accent: #565f89;
    alt-bg: #24283b;

    /* A slightly dimmed color for the separator line */
    sep:    #414868;

    background-color:   @bg;
    text-color:         @fg;
}

/* --- CATPPUCCIN MOCHA (Uncomment to use) --- */
